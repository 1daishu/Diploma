<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dev.diploma.ui.fragment.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.dev.diploma.ui.fragment.orders.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_ordersFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/supportFragment"
        android:name="com.dev.diploma.ui.fragment.support.SupportFragment"
        android:label="fragment_support"
        tools:layout="@layout/fragment_support" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dev.diploma.ui.fragment.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_userInfoDialogFragment"
            app:destination="@id/userInfoDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.dev.diploma.ui.fragment.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dev.diploma.ui.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userInfoDialogFragment"
        android:name="com.dev.diploma.ui.fragment.userInfoDialog.UserInfoDialogFragment"
        android:label="fragment_user_info_dialog"
        tools:layout="@layout/fragment_user_info_dialog" />
    <fragment
        android:id="@+id/currentProductsFragment"
        android:name="com.dev.diploma.ui.fragment.currentProduct.CurrentProductsFragment"
        android:label="fragment_current_products"
        tools:layout="@layout/fragment_current_products">
        <action
            android:id="@+id/action_currentProductsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/historicalProductsFragment"
        android:name="com.dev.diploma.ui.fragment.historyProduct.HistoricalProductsFragment"
        android:label="fragment_historical_products"
        tools:layout="@layout/fragment_historical_products" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.dev.diploma.ui.fragment.payment.PaymentFragment"
        android:label="fragment_payement"
        tools:layout="@layout/fragment_payment">
        <action
            android:id="@+id/action_paymentFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
    </fragment>
</navigation>